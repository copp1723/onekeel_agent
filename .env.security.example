# Security Hardening Environment Variables
# Copy these to your .env file and adjust as needed

# AWS KMS Integration
USE_AWS_KMS=true
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=
AWS_KMS_KEY_ALIAS=alias/agentflow-encryption-key
AWS_KMS_AUTO_ROTATION_DAYS=90

# Key Rotation
KEY_ROTATION_ENABLED=true
KEY_ROTATION_SCHEDULE="0 0 1 * *"  # Monthly on the 1st day at midnight
KEY_ROTATION_DAYS=90
KEY_ROTATION_NOTIFY_BEFORE_DAYS=7

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_MONITORING_SCHEDULE="*/15 * * * *"  # Every 15 minutes
SECURITY_MONITORING_WINDOW_MINUTES=60

# Security Alert Thresholds
ALERT_THRESHOLD_FAILED_LOGINS=5
ALERT_THRESHOLD_API_KEY_CREATION=3
ALERT_THRESHOLD_PERMISSION_DENIED=10
ALERT_THRESHOLD_ENCRYPTION_FAILURES=3

# Encryption Key (for local encryption when KMS is disabled)
# Generate a secure random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Security Audit Level (info, warning, error, critical)
SECURITY_AUDIT_LEVEL=info

# Admin Email for Security Alerts
ADMIN_EMAILS=admin@example.com,security@example.com
