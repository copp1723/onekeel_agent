[[workflows.workflow]]
name = "Fixed Server Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node run-fixed-server.js"
waitForPort = 5001

[[workflows.workflow]]
name = "TypeScript Type Check"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/type-check.js"

[[workflows.workflow]]
name = "Frontend Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npx next dev -p 3001"
waitForPort = 3001

[[workflows.workflow]]
name = "Workflow Demo"
